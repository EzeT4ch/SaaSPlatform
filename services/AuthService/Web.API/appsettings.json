{
  "ConnectionStrings": {
    "Database": "Server=localhost,1433;Database=FastTrackDb;User Id=sa;Password=${DB_PASSWORD};TrustServerCertificate=True;"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "ServerUrl": "http://seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "super-duper-secret-value-that-should-be-in-user-secrets",
    "Issuer": "clean-architecture",
    "Audience": "developers",
    "ExpirationInMinutes": 60
  },
  "FeatureFlags": {
    "Url": "https://unleash.youecommerce.local/api",
    "ApiKey": "your-secret-key",
    "AppName": "BillingService",
    "RefreshIntervalSeconds": 30
  }
}
